import Experience from "../components/Experience.astro";
import BriefcaseIcon from "../icons/BriefcaseIcon.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Footer from "../components/Footer.astro";
import UserIcon from "../icons/UserIcon.astro";
import DownloadIcon from "../icons/DownloadIcon.astro";

const content = {
  en: {
    title: "drmcodes | FullStack Web Developer",
    description:
      "drmcodes is a web developer with over 1 year of experience specializing in web pages and microservices.",
    greeting: "Hello游녦, I'm drmcodes",
    experienceDescription:
      "+1 year of experience as a self-taught developer. FullStack Web Developer, focused on continuous learning and constant improvement.",
    experience: "Experience",
    projects: "Projects",
    aboutMe: "About Me",
  },
  es: {
